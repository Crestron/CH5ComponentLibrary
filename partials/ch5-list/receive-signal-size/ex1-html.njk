{% raw %}
<p>
    Clicking this button will increment the signal for the list by 5
    <ch5-button label="Btn1" sendEventOnClick="trigH1"></ch5-button>
</p>

<ch5-list size="10"
           orientation="horizontal"
           indexId="idx"
           minWidth="250px"
           maxWidth="500px"
           minHeight="100px"
           maxHeight="150px"
           itemWidth="125px"
           itemHeight="75px"
           scrollbar="true"
           receiveStateSize="sigH1">
    <template>
        <div class="horizontal-list-item">
            <span>item_{{idx}}</span>
        </div>
    </template>
</ch5-list>

{% endraw %}
