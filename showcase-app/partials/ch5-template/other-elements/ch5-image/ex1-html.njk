{% raw %}
    <h6>Ch5-image used inside a ch5-template.</h6>
    <p>Send signal on click or tap event (mouse or finger up and down in a small period of time).</p>
    <p>
        Switch between clicking the image and the button below in order to change the provided image URL.
    </p>
    <ch5-button label="Set image url" sendEventOnClick="trigger.from.outside.ch5template"></ch5-button>
    <br/>
    <br/>
    <template id="image">
        <p>Image Sample</p>
        <ch5-image
                alt="Backyard image"
                height="200px"
                width="300px"
                url="https://www.crestron.com/Crestron/media/Crestron/GeneralSiteImages/Featured%20Pages/Digital%20Media/point_to_point_tr.jpg"
                sendEventOnClick="original.trigger"
                receiveStateUrl="original.receive_image_url">
        </ch5-image>
    </template>

    <ch5-template templateId="image" context="original:replacement">

    </ch5-template>
{% endraw %}
