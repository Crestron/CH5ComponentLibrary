<ch5-button 
    stretch="width" 
    label="trigger pulse (to show)" 
    sendEventOnClick="sig_trig_pulse1">
</ch5-button>
<br /><br />
<ch5-button 
    stretch="width" 
    label="trigger pulse (to hide)" 
    sendEventOnClick="sig_trig_pulse2">
</ch5-button>

<hr/>

<ch5-dpad 
    type="success" 
    noshowType="remove"
    receiveStateShowPulse="a_pulse1"
    receiveStateHidePulse="a_pulse2"
    sendEventOnShow="button_shown">
</ch5-dpad>
<br /><br />

<ch5-dpad 
    type="success" 
    noshowType="display"
    receiveStateShowPulse="a_pulse1"
    receiveStateHidePulse="a_pulse2"
    sendEventOnShow="button_shown">
</ch5-dpad>
<br /><br />

<ch5-dpad 
    type="success" 
    noshowType="visibility"
    receiveStateShowPulse="a_pulse1"
    receiveStateHidePulse="a_pulse2"
    sendEventOnShow="button_shown">
</ch5-dpad>
