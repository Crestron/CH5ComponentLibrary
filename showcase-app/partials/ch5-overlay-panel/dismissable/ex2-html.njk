        dismissable="false"
        receiveStateShowPulse="trigger_2"
        receiveStateHidePulse="trigger_3">
    <p>Sample text</p>
    <ch5-image
            id="ex2-img"
            url="https://picsum.photos/200/300/?random">
    </ch5-image>
</ch5-overlay-panel>