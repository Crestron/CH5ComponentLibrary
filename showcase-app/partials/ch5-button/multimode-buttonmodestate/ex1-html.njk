            <ch5-button-label>
                <template>
                    <b>Button Label for Mode 1 from ch5-button-mode-state 'normal'</b>
                </template>
            </ch5-button-label>
        </ch5-button-mode-state>
        <ch5-button-mode-state state="pressed" iconclass="fa fa-play" type="text">
            <ch5-button-label>
                <template>
                    <b>Button Label for Mode 1 from ch5-button-mode-state 'pressed'</b>
                </template>
            </ch5-button-label>
        </ch5-button-mode-state>
        <ch5-button-mode-state state="selected" iconclass="fa fa-pause" type="success">
            <ch5-button-label>
                <template>
                    <b>Button Label for Mode 1 from ch5-button-mode-state 'selected'</b>
                </template>
            </ch5-button-label>
        </ch5-button-mode-state>
    </ch5-button-mode>
    <ch5-button-label>
        <template>
            <b>Button Label from ch5-button</b>
        </template>
    </ch5-button-label>
</ch5-button>

