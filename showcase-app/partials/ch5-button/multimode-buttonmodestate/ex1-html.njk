<ch5-button type="info" mode="0" checkboxShow="true" receivestatemode="signal.trig_1.mode" receivestateselected="signal.trig_1.selected" stretch="width">
    <ch5-button-mode type="primary">
        <ch5-button-label>
            <template>
                <b>Button Label for Mode 0 from ch5-button-mode</b>
            </template>
        </ch5-button-label>
        <ch5-button-mode-state state="normal" iconclass="fa fa-play">
            <ch5-button-label>
                <template>
                    <b>Button Label for Mode 0 from ch5-button-mode-state 'normal'</b>
                </template>
            </ch5-button-label>
        </ch5-button-mode-state>
    </ch5-button-mode>
    <ch5-button-mode type="secondary">
        <ch5-button-label>
            <template>
                <b>Button Label for Mode 1 from ch5-button-mode</b>
            </template>
        </ch5-button-label>
