.vertical-list-item {
    border: 1px solid transparent;
    color: #155724;
    background-color: #d4edda;
    border-color: #c3e6cb;
    padding: 10px;
    display: table;
    width: 100%;
    height: 100%;
}

.vertical-list-item span {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
}