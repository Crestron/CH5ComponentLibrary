{% raw %}
    <p>
        Clicking this button will increment the signal for the list by 5
        <ch5-button sendEventOnClick="triggerIncrementHorizontalList" label="Increment first list"></ch5-button>
    </p>

    <p>
        Clicking this button will decrement the signal for the list by 3
        <ch5-button sendEventOnClick="triggerDecrementHorizontalList" label="Decrement the list"></ch5-button>
    </p>

    <h4>Simple list</h4>
    <ch5-list size="10"
              orientation="horizontal"
              indexId="idx"
              minWidth="250px"
              maxWidth="500px"
              minHeight="100px"
              maxHeight="150px"
              itemWidth="125px"
              itemHeight="75px"
              scrollbar="true"
              receiveStateSize="receiveSizeHorizontalList">
        <template>
            <div class="horizontal-list-item">
                <span>item_{{idx}}</span>
            </div>
        </template>
    </ch5-list>

    <h4>Endless mode</h4>
    <ch5-list size="10"
              orientation="horizontal"
              endless
              indexId="idx"
              minWidth="250px"
              maxWidth="500px"
              minHeight="100px"
              maxHeight="150px"
              itemWidth="125px"
              itemHeight="75px"
              scrollbar="true"
              receiveStateSize="receiveSizeHorizontalList">
        <template>
            <div class="horizontal-list-item">
                <span>item_{{idx}}</span>
            </div>
        </template>
    </ch5-list>


    <h4>Right to left</h4>
    <ch5-list size="10"
              orientation="horizontal"
              direction="rtl"
              indexId="idx"
              minWidth="250px"
              maxWidth="500px"
              minHeight="100px"
              maxHeight="150px"
              itemWidth="125px"
              itemHeight="75px"
              scrollbar="true"
              receiveStateSize="receiveSizeHorizontalList">
        <template>
            <div class="horizontal-list-item">
                <span>item_{{idx}}</span>
            </div>
        </template>
    </ch5-list>

    <h4>Buffer amount</h4>
    <ch5-list size="10"
              orientation="horizontal"
              bufferAmount="3"
              direction="rtl"
              indexId="idx"
              minWidth="250px"
              maxWidth="500px"
              minHeight="100px"
              maxHeight="150px"
              itemWidth="125px"
              itemHeight="75px"
              scrollbar="true"
              receiveStateSize="receiveSizeHorizontalList">
        <template>
            <div class="horizontal-list-item">
                <span>item_{{idx}}</span>
            </div>
        </template>
    </ch5-list>

    <h4>Page Swipe</h4>
    <ch5-list size="10"
              orientation="horizontal"
              pagedSwipe="true"
              direction="rtl"
              indexId="idx"
              minWidth="250px"
              maxWidth="500px"
              minHeight="100px"
              maxHeight="150px"
              itemWidth="125px"
              itemHeight="75px"
              scrollbar="true"
              receiveStateSize="receiveSizeHorizontalList">
        <template>
            <div class="horizontal-list-item">
                <span>item_{{idx}}</span>
            </div>
        </template>
    </ch5-list>

{% endraw %}
