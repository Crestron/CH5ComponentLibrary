.content + .content {
    margin-top: 36px;
}

.horizontal-list-item {
    border: 1px solid transparent;
    color: #155724;
    background-color: #d4edda;
    border-color: #c3e6cb;
    display: table;
    width: 100%;
    height: 100%;
}
.horizontal-list-item span {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
}
.red {
    background-color:red;
    color:white;
}
.green {
    background-color:green;
    color:white;
}
.blue {
    background-color:blue;
    color:white;
}
