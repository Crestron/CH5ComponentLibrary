<!doctype html>
<html class="no-js" lang="">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{ title }}</title>
        <base href="{{ siteurl }}">
        <meta name="description" content="{{ description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <meta http-equiv="cache-control" content="max-age=0"/>
        <meta http-equiv="cache-control" content="no-cache"/>
        <meta http-equiv="expires" content="0"/>
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT"/>
        <meta http-equiv="pragma" content="no-cache"/>

        <link rel="icon" href="favicon.ico" style="width: 500px">

        {% include "../partials/css-links.njk" %}
        {% block additional_css_includes %}{% endblock %}

        {% include "../partials/header-scripts.njk" %}
        <script type="text/javascript">
        {#
            JS code that resize iframe to the available width and height
        #}
        var contentFrame

        function loadContent(event, srcURL, setIsActive = false) {
            contentFrame.src = srcURL;
            if (setIsActive && event) {
                const listElement = event.target.parentElement.nextElementSibling;

                for (const ulElement of document.querySelectorAll('.menu-list')) {
                    ulElement.classList.remove('is-active');
                }

                if (!listElement.classList.contains('is-active')) {
                    listElement.classList.add('is-active');
                }
            }
        }

        window.addEventListener('DOMContentLoaded', function(e) {
            var iframes = document.querySelectorAll("iframe");
            contentFrame = iframes[0];
        } );

        </script>
        {% block additional_header_js %}{% endblock %}        
    </head>

    <body id="base">
        <div class="header">
            <div class="logo">
                <img class="logo-image" onclick="document.location='/index.html'"
         src="{{ siteurl }}img/ch5-logo-dev-20181017-03.svg" alt="Crestron">
         &nbsp;
                <div class="select select-theme">
                    {% include "../partials/theme-dropdown.njk" %}
                </div>
            </div>
        </div>
        <input type="checkbox" class="openSidebarMenu" id="openSidebarMenu">
        <label for="openSidebarMenu" class="sidebarIconToggle">
            <div class="spinner diagonal part-1"></div>
            <div class="spinner horizontal"></div>
            <div class="spinner diagonal part-2"></div>
        </label>

        <div id="sidebarMenu">
            <ul class="sidebarMenuInner">
                {% include "../partials/nav.njk" %}
            </ul>
        </div>
        <div id='center' class="main center">
        {% include "../partials/header.njk" %}
        <iframe class="frameMain" scrollbar="yes" title="Crestron Components Lib - Showcase App"></iframe>
        </div>
    </body>
</html>