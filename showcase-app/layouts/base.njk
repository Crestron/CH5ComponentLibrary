<!doctype html>
<html class="no-js" lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{ title }}</title>
    <base href="{{ siteurl }}">
    <meta name="description" content="{{ description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta http-equiv="cache-control" content="max-age=0"/>
    <meta http-equiv="cache-control" content="no-cache"/>
    <meta http-equiv="expires" content="0"/>
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT"/>
    <meta http-equiv="pragma" content="no-cache"/>

    <link rel="icon" href="favicon.ico" style="width: 500px">

    {% include "../partials/css-links.njk" %}
    {% block additional_css_includes %}{% endblock %}

    {% include "../partials/header-scripts.njk" %}

    {% block additional_header_js %}{% endblock %}

</head>

<body>
<!--[if lte IE 9]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade
    your browser</a> to improve your experience and security.</p>
<![endif]-->

<div class="logo">
    <img class="logo-image" onclick="document.location='/index.html'"
         src="{{ siteurl }}img/ch5-logo-dev-20181017-03.svg" alt="Crestron">
    <div class="select select-theme">
        {% include "../partials/theme-dropdown.njk" %}
    </div>
</div>

<section class="section">
    <div class="container-fluid">
        <div class="columns is-desktop ">
            <div class="column is-2-desktop is-12-tablet">
                {% include "../partials/nav.njk" %}
            </div>
            <div class="column is-10-desktop content-components-section">
                {% include "../partials/header.njk" %}
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</section>

{% include "../partials/footer-scripts.njk" %}
{% block additional_footer_scripts %}{% endblock %}

</body>

</html>
