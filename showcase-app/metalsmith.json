{
  "source": "./src",
  "destination": "./dist/Content/Topics/ShowcaseApp",
  "clean": true,
  "metadata": {
    "title": "Showcase App",
    "description": "Showcase App for Crestron Components",
    "siteurl":"/Content/Topics/ShowcaseApp/"
  },
  "plugins": {
    "metalsmith-debug":{},
    "metalsmith-assets":{
      "source": "../crestron-components-lib/build_bundles/umd/",
      "destination": "./cr-com-lib"
    },
    "metalsmith-static":{
      "src": "./static",
      "dest": "."
    },
    "metalsmith-in-place":{
    },
    "metalsmith-sass":{
      "outputDir":"css/",
      "sourceMap": true,
      "sourceMapContents": true
    }

  }
}