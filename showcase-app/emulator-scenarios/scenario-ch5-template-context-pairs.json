        {
          "state": "receive.prevtrack_selected",
          "type": "boolean",
          "logic": "toggle"
        }
      ]
    },
    {
      "type": "boolean",
      "event": "MediaPlayer[0].play.clicked",
      "trigger": true,
      "actions": [
        {
          "state": "selected_button",
          "type": "s",
