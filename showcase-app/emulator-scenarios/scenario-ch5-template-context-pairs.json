          "value": "play clicked"
        },
        {
          "state": "receive.play_selected",
          "type": "boolean",
          "logic": "toggle"
        }
      ]
    },
    {
      "type": "boolean",
      "event": "MediaPlayer[0].nexttrack.clicked",
      "trigger": true,
      "actions": [
        {
          "state": "selected_button",
          "type": "s",
