{
  "name": "crestron-metadata-generator",
  "version": "1.0.0",
  "description": "Typescript metadata documentation generation for the ch5 visual studio code extension.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Crestron/CH5ComponentLibrary.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "generator": "./bin/generator"
  },
  "scripts": {
    "prepublishOnly": "yarn run build",
    "preversion": "yarn run lint",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -p .",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "jest test/ --verbose",
    "debug": "node -r ts-node/register --inspect-brk generator.ts generator.ts --path ../crestron-components-lib/src/_interfaces/index.ts --allTypes --writeto ../crestron-components-lib/src/_interfaces/generated-metadata/schema.json",
    "run": "ts-node generator.ts",
    "gen": "ts-node generator.ts --path test/complex/main.ts --allTypes --writeto test/complex/schema-custom.json",
    "gen:metadata": "ts-node generator.ts --path ../crestron-components-lib/src/_interfaces/index.ts --allTypes --writeto ../crestron-components-lib/src/_interfaces/generated-metadata/schema.json"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "test-runtime",
      "<rootDir>/build",
      "_site",
      "src"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@types/assertion-error": "^1.1.0",
    "@types/chai": "^4.1.4",
    "@types/glob": "^5.0.35",
    "@types/json-schema": "^7.0.0",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "chai": "~4.1.2",
    "jest": "^23.5.0",
    "source-map-support": "~0.5.9",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0"
  },
  "dependencies": {
    "ajv": "^6.5.4",
    "commander": "~2.18.0",
    "glob": "~7.1.3",
    "linq": "^3.1.0",
    "typescript": "4.2"
  },
  "resolutions": {
    "**/event-stream": "^4.0.1"
  }
}
